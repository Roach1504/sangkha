<?xml version="1.0" encoding="utf-8"?>
<com.balysv.materialripple.MaterialRippleLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    app:mrl_rippleColor="@color/accent">
<LinearLayout
    android:id="@+id/layout_news"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="2dp">

        <LinearLayout
            android:id="@+id/layout_news_image"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="30"
            android:layout_gravity="top"
            android:layout_marginRight="3dp">
            <ImageView
                android:id="@+id/image_news"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:maxWidth="100dp"
                android:maxHeight="50dp"
                android:scaleType="centerCrop"/>
        </LinearLayout>
        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="70"
            android:orientation="vertical">
            <TextView
                android:id="@+id/text_news_title"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="35"
                android:textSize="12sp"
                android:textColor="@color/primary_text"
                android:textStyle="bold"
                android:text="@string/test_normal"/>
            <TextView
                android:id="@+id/text_news_annotation"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="45"
                android:textSize="11sp"
                android:textColor="@color/primary_text"
                android:text="@string/test_long"/>
            <TextView
                android:id="@+id/text_news_date"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="20"
                android:textSize="11sp"
                android:textAlignment="viewEnd"
                android:layout_marginEnd="5dp"
                android:textColor="@color/secondary_text"/>
        </LinearLayout>

</LinearLayout>
</com.balysv.materialripple.MaterialRippleLayout>
