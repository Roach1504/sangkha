<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.balysv.materialripple.MaterialRippleLayout
        android:id="@+id/layout_recyclerview_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mrl_rippleColor="@color/accent">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:elevation="1dp"
            app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">
                <TextView
                    android:id="@+id/text_history_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="@string/test_short"
                    android:textSize="16dp"
                    android:textColor="@color/primary_text"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/image_history"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scaleType="centerCrop"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/text_history_annotation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/test_normal"
                    android:textSize="14dp"
                    android:textColor="@color/primary_text"/>
                <TextView
                    android:id="@+id/text_history_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/secondary_text"/>
            </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </com.balysv.materialripple.MaterialRippleLayout>
</LinearLayout>