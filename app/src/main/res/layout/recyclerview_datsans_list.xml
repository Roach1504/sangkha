<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/layout_datsan"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/text_datsan_title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:textSize="16sp"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:textAlignment="gravity"
            android:textColor="@color/primary_text"/>
        <ImageView
            android:id="@+id/image_datsans_arrow"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:src="@drawable/ic_arrow_drop_down_black_48dp"/>
    </LinearLayout>
    <com.github.aakira.expandablelayout.ExpandableRelativeLayout
        android:id="@+id/layout_expandable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:ael_duration="300"
        app:ael_interpolator="linear">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="5dp">
            <org.sufficientlysecure.htmltextview.HtmlTextView
                android:id="@+id/text_datsan_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/AppTheme.TextAppearanceHtml"/>
        </LinearLayout>
    </com.github.aakira.expandablelayout.ExpandableRelativeLayout>

</LinearLayout>